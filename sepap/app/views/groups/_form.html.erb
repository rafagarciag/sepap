<%= form_for@group, :html => {:multipart => true} do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= @group.errors.count>1? "#{@group.errors.count} Errores":"#{@group.errors.count} Error" %></h2>

      <ul>
      <% @group.errors.each do |attr_name, message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :clave %><br />
    <%= f.text_field :clave, :size => 12 %>
  </div>
  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre, :size => 12 %>
  </div>
  <div class="field">
    <%= f.label :campus %><br />
    <%= f.text_field :campus, :size => 12 %>
  </div>
  <div class="field">
    <%= f.label :semestre %><br />
    <%= f.text_field :semestre, :size => 12 %>
  </div>
  <div class="field">
    <%= f.label :fecha %><br />
    <%= f.text_field :fecha, :size => 12 %>
  </div>
<% if @group.new_record?%>
  <div>
  	<%= f.label :miembros %>
  	<%= image_tag "infoicon.png" ,:size => "20x20", :id=> "infoMiembros"%>
	<span id="spInfoMiembros", class="tooltip"> 
		Archivo de texto plano con los miembros del grupo,
		<br />
		cada línea del archivo debe tener el siguiente formato
		<br />
		Matrícula, Nombre(s), Apellido(s)
		<br />
		Ejemplo:
		<br />
		<code>
			a00123456, Juan, Perez Morales
			<br />
			a00123457, José Antonio, Garza Luna
		</code>
	</span>
	<br />
    <%=f.file_field (:miembros) %>
  </div>
 <% end %>
  </br>
  <div class="actions">
    <%= f.submit "Registrar cambios" %>
  </div>
<% end %>
