<h1> B&uacute;squeda </h1>
Mostrando resultados de problema <%= params[:num] %>, grupo: "<%= @group.nombre %> - <%= @group.clave %>"
<br />
<hr />

<table id="porBloques">
	<tr>
		<th width=90 align="left"> Número de problema </th>
		<th width=90 align="left" id="porBloques"> Alumno </th>
		<th width=110 align="left"> Resultado </th>
		<th width=100 align="left"> Lenguaje </th>
		<th width=80 align="left"> Intentos </th>
		<th width=125 align="left"> Fecha de último intento</th>
	</tr>

	<% @con_intento.each do |i| %>
	<tr>
		<% if i.user.codigo_aceptado?(i.numero_problema) %>
			<td>
				<%= link_to i.numero_problema, show_codigo_path(:group_id => @group.id, :user_id => i.user_id, :problem_id => i.problem_id)  %>
			</td>
			<td><%= i.user.matricula %></td>
			<td>Aceptado</td>
		<% else %>
			<td>
				<%= link_to i.numero_problema, show_codigo_path(:group_id => @group.id, :user_id => i.user_id, :problem_id => i.problem_id)  %>
			</td>
			<td><%= i.user.matricula %></td>
			<td><%= i.user.attempts.find_all_by_numero_problema(i.numero_problema).last.try(:resultado) %></td>
		<% end %>
		<td><%= i.lenguaje %> </td>
		<td><%= i.conteo %></td>
		<td><%= i.created_at.strftime("%d/%m/%Y - %H:%Mhrs") %> </td>
	</tr>
	<% end %>

	<% @sin_intento.each do |i| %>
	<tr>
		<td><%= params[:num] %></td>
		<td><%= i.matricula %></td>
		<td> -- </td>
		<td> -- </td>
		<td> 0 </td>
		<td> -- </td>
	</tr>
	<% end %>
</table>
<table id="porMatricula">
	<tr>
		<th width=90 align="left"> N&uacute;mero de problema </th>
		<th width=90 align="left" id="porMatricula"> Alumno </th>
		<th width=110 align="left"> Resultado </th>
		<th width =100 align="left"> Lenguaje </th>
		<th width =80 align="left"> Intentos </th>
		<th width =100 align="left"> Fecha de último intento</th>
	</tr>

	<% @por_matricula.each do |i| %>
		<% if i.class.name == "Attempt" %>
			<tr>
				<td><%= link_to i.numero_problema, show_codigo_path(:group_id => @group.id, :user_id => i.user_id, :problem_id => i.problem_id)  %></td>
				<td><%= i.user.matricula %></td>
				<td><%= i.resultado %></td>
				<td><%= i.lenguaje %> </td>
				<td><%= i.conteo %></td>
				<td><%= i.created_at.strftime("%d / %m / %Y") %> </td>
			</tr>
		<% else %>
			<tr>
				<td><%= @numero %></td>
				<td><%= i.matricula %></td>
				<td> -- </td>
				<td> -- </td>
				<td> 0 </td>
				<td> -- </td>
			</tr>
		<% end %>
	<% end %>

</table>
