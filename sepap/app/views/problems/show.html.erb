
<p>
  <h1><%= @problem.titulo %></h1>
  <b>Problema <%= @problem.numero %></b>
</p>

<p>  
  <% if user_signed_in? %>
    <%= link_to "Enviar solución", nuevo_intento_path( :numero => @problem.numero), :class=>"botonoff botones"%>
  <% end %>
</p>


<br />
<p>
  <%= @problem.descripcion.html_safe %>
</p>

<% if user_signed_in? %>
	<%if current_user.admin? || current_user.profesor?%>
			<p>
			 <b>Por:</b>
			 <%= @problem.user.nombre %>
			</p>
	<% end %>
<% end %>
<p>
 <% if user_signed_in? %>
  <%= link_to "Enviar solución", nuevo_intento_path( :numero => @problem.numero), :class=>"botonoff botones"%>
  <% end %>
</p>

<% if user_signed_in? %>
	<%if current_user.admin? || current_user.profesor?%>
		<%= link_to 'Editar', edit_problem_path(@problem) %>
	<% end %>
<% end %>

