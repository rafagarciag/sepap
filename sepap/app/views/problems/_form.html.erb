<%= form_for @problem, :html => {:multipart => true} do |f| %>
  <% if @problem.errors.any? %>
    <div id="error_explanation">
      <h2><%= @problem.errors.count>1? "#{@problem.errors.count} Errores":"#{@problem.errors.count} Error" %></h2>

      <ul>
      <% @problem.errors.each do |attr_name, message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :numero, 'Número de problema' %><br />
    <%= f.text_field :numero, :size => 6 %>
  </div>
  
  <div class="field">
    <%= f.label :titulo, 'Título' %><br />
    <%= f.text_field :titulo %>
  </div>

  <div class="field">
    <%= f.label :tiempo, 'Tiempo límite (en segundos)' %><br />
    <%= f.text_field :tiempo, :size => 4, :value => 15 %>
  </div>
  
  <div class="field">
  	Tipo de problema 
  	<br />
  	<%= f.radio_button :modulo, 'false', :id=>"btnCompleto"%>
  	<%= f.label :modulo_false, 'Completo' %>
	<br />
	<%= f.radio_button :modulo, 'true', :id=>"btnModulo" %>
	<%= f.label :modulo_true, 'Módulos' %>
  </div>
  
  <div class="field">
    <%= f.label :descripcion, 'Descripción' %><br />
    <%= f.text_area :descripcion, :cols => 80, :rows => 40 %>
  </div>
  
  <fieldset>
  	  <legend><b>Solución</b></legend>
	  
	  <div class="field">
		<%= f.label :solution, 'Ejecutable con el main' %> 
		<%= image_tag "infoicon.png" ,:size => "20x20", :id=> "infoSol"%>
		<span id="spInfoSol", class="tooltip">Archivo compilado p.e. Problema1001.class</span>
		<br />
		<%= f.file_field :solution %>
	  </div>
	  
	  <div class="field" id="divModulo">
		<%= f.label :metodo, 'Metodo(s) utilizado(s)' %>
		<%= image_tag "infoicon.png" ,:size => "20x20", :id=> "infoMod"%>
		<span id="spInfoMod", class="tooltip"> Archivo compilado con los metodos que se le pediran al alumno p.e. Metodo1001.class</span>
		<br />
		<%= f.file_field :metodo %>
	  </div>
  </fieldset>
  
  <br />
  
  <fieldset>
      <legend><b>Entradas</b></legend>
      <div class="field">
        <%= f.label :input, 'Entradas 1' %>
        <%= image_tag "infoicon.png" ,:size => "20x20", :id=> "infoEntrada"%>
		<span id="spInfoEntrada", class="tooltip"> Archivos con las entradas que se evaluara el problema.</span>
        <br />
        <%= f.file_field :input %>
      </div>
      <div class="field">
        <%= f.label :input2, 'Entradas 2' %><br />
        <%= f.file_field :input2 %>
      </div>
      <div class="field">
        <%= f.label :input3, 'Entradas 3' %><br />
        <%= f.file_field :input3 %>
      </div>
  </fieldset>
  
  <br />

  <fieldset>
      <legend><b>Salidas</b></legend>
      <div class="field">
        <%= f.label :output, 'Salidas 1' %>
        <%= image_tag "infoicon.png" ,:size => "20x20", :id=> "infoSalida"%>
		<span id="spInfoSalida", class="tooltip"> Archivos con las salidas que se esperan de acuerdo a las entradas.</span>
        <br />
        <%= f.file_field :output %>
      </div>
      
      <div class="field">
        <%= f.label :output, 'Salidas 2' %><br />
        <%= f.file_field :output2 %>
      </div>
      
      <div class="field">
        <%= f.label :output, 'Salidas 3' %><br />
        <%= f.file_field :output3 %>
      </div>
  </fieldset>
  <br />
  <div class="actions">
    <%= f.submit( "Registrar Cambios", :onclick =>"clickBoton()", :class=>"botones")%>
    <%=image_tag("loading.gif", :size => "50x50", :id=>"loading")%>
  </div>
<% end %>
