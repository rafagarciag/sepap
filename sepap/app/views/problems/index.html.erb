<h1>Listado de problemas</h1>

<table>
  <tr>
    <th align="left" width=100>Número</th>
    <th align="left" width=150>Título</th>
    <th align="left" width=110>Usuario</th>
    <th> </th>
    <th> </th>
  </tr>

<% @problems.each do |problem| %>
  <tr>
    <td><%= link_to problem.numero, problem %></td>
    <td><%= problem.titulo %></td>
    <td><%= problem.user.nombre %></td>
    
    <% if user_signed_in? %>
		<% if current_user.admin? || current_user.profesor? %>
			<td><%= link_to image_tag('Edit.jpg'), edit_problem_path(problem) %></td>
			<td><%= link_to image_tag('Delete.jpg'), problem, :confirm => 'La acción eliminará el problema de la base de datos así como los archivos que se hayan adjuntado del mismo', :method => :delete %></td>
		<% end %>	
	<% end %>
    
   
    </tr>
<% end %>
</table>

<br />

<% if user_signed_in? %>
	<%if current_user.admin? || current_user.profesor?%>
		<%= link_to 'Crear problema nuevo', new_problem_path %>
	<%end%>	
<%end%>

